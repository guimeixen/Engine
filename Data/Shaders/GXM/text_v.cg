uniform CameraUBO
{
	float4x4 projView;
} cam : BUFFER[0];

out float4 outPos : POSITION;
out float2 outUv : TEXCOORD0;
out float4 outColor : COLOR0;

void main(
	float4 inPos,				// Has 2d pos and uv
	float4 inUv)					// Has rgba color
{
	outUv = inPos.zw;
	outUv.y = 1.0 - outUv.y;
	outColor = inUv;
	outPos = mul(cam.projView, float4(inPos.xy, 0.0f, 1.0f));
}